<script>
jQuery(document).ready(function () {
   jQuery("#selected-value").on("click", function (e) {
      e.preventDefault();
      jQuery("#dropdown_solution_list").css('display','block');
   
   });
   
   jQuery("#dropdown_solution_list li a").on("click", function (e) {
  
    e.preventDefault();
    // remove highlight from all
   // jQuery("#custom-select li").removeClass("selected");

    // highlight the clicked one
    jQuery(this).addClass("selected");

    // update display (optional)
    let url = jQuery(this).data("url");
    jQuery("#selected-value").html(jQuery(this).html());
	jQuery("#selected-value").css('color','#000');
	jQuery("#solution_link_btn a").attr('href',url);
	jQuery("#dropdown_solution_list").css('display','none');
	
	
   });
   
    //Combine both (mouseout + click outside)
    jQuery(document).on("mouseup", function(e) {
      if (!jQuery(e.target).closest("#dropdown_solution_list").length) {
              jQuery("#dropdown_solution_list").css('display','none');
		}
	});

	jQuery("#dropdown_solution_list").on("mouseleave", function() {
		 jQuery("#dropdown_solution_list").css('display','none');
	});
   
   
   
});
</script>
